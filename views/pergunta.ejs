<%- include ("partials/navbar.ejs") %>
    <body> 
        <div class="container"> 
            <hr> 
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <hr> 
                <form method="POST" action="/salvarResposta/<%= pergunta.id %>"> 
                    <h3>Responda a essa pergunta:</h3>
                    <textarea placeholder="Digite sua Resposta..." class="form-control" name="corpo"></textarea>
                    <br>
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form> 
                <hr> 
                <h3>Respostas:</h3>
                <hr>  
                <% respostas.forEach((resposta) => { %>
                    <div class="card"> 
                        <div class="card-body"> 
                          <p><%=resposta.corpo%></p>
                        </div>
                    </div> 
                <br> 
                <%});%>
        </div>
    </body>
    
